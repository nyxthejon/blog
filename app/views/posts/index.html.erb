<p id="notice"><%= notice %></p>

<h1>Posts</h1>

    <div class="row mb-2">
    <% @posts.each do |post| %>
        <div class="col-md-6">
            <div class="card flex-md-row mb-4 box-shadow h-md-250">
                <div class="card-body d-flex flex-column align-items-start">
                  <strong class="d-inline-block mb-2 text-primary">  <%= post.user.name || 'Anonimna oseba' %></strong>
                  <h3 class="mb-0">
                  <%= post.title %>
                  </h3>
                  <div class="mb-1 text-muted"><%= post.created_at.strftime('%d.%m.%Y') %></div>
                  <p class="card-text mb-auto"><%= post.body.truncate(28, seperator: /\s/) %></p>
                 <%= display_posts_links(post) %>

            </div>
          </div>
        </div>
    <% end %>
    </div>

<br>

<%= link_to 'New Post', new_post_path %>
