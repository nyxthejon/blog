<p id="notice"><%= notice %></p>

<h1>News</h1>

    <div class="row mb-2">
    <% @news.each do |news| %>
        <div class="col-md-6">
            <div class="card flex-md-row mb-4 box-shadow h-md-250">
                <div class="card-body d-flex flex-column align-items-start">
                  <strong class="d-inline-block mb-2 text-primary">  <%= news.user.name || 'Anonimna oseba' %></strong>
                  <h3 class="mb-0">
                  <%= news.title %>
                  </h3>
                  <div class="mb-1 text-muted"><%= news.created_at.strftime('%d.%m.%Y') %></div>
                  <p class="card-text mb-auto"><%= news.body.truncate(28, seperator: /\s/) %></p>
                 <%= display_news_links(news) %>

            </div>
          </div>
        </div>
    <% end %>
    </div>

<br>

<%= link_to 'New News', new_news_path %>
